@model NewsPortal.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}
<h2>Вход на сайт</h2>
<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
   
        <label asp-for="Login" class="form-label"></label>
        <input asp-for="Login" class="form-control"></input>
        <span asp-validation-for="Login"></span>

        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control"></input>
        <span asp-validation-for="Password"></span>
    
      <button type="submit" class="btn btn-success">Войти</button>
   
</form>