@model NewsPortal.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";

}
<h2>Регистрация</h2>
<form asp-action="Register" asp-controller="Account" asp-antiforgery="true">
   
        <label asp-for="Login"class="form-label"></label>
        <input asp-for="Login"class="form-control"></input>
        <span asp-validation-for="Login"></span>
    
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control"></input>
        <span asp-validation-for="Password"></span>
       
        <label asp-for="ConfirmPassword" class="form-label"></Label>
        <input asp-for="ConfirmPassword" class="form-control"></input>
        <span asp-validation-for="ConfirmPassword"></span>
   
   
        <button type="submit" class="btn btn-success">Зарегистрировать</button>
 
</form>